<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_topup_initial_transaction"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zemulla.android.app.topup.TopupInitialTransactionActivity">

    <include layout="@layout/app_bar" />

    <TextView
        android:id="@+id/txtTopupWayName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorExtraDark"
        android:gravity="center"
        android:text="AirTime Topup Pin"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <ScrollView
        android:id="@+id/frameRootTopup"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--initial view where user enter only amount-->
        <LinearLayout
            android:id="@+id/lineatInitialViewTopup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dimen_16dp"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:gravity="center"
                android:text="Top Up Recharge Successfully Done"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pinTextView"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/big_text" />

                <ImageView
                    android:id="@+id/clipToCopy"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_content_copy_white_24dp"
                    android:tint="@color/colorPrimaryDark" />
            </LinearLayout>


            <TextView

                android:id="@+id/detailsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="?actionBarSize" />

            <TextView
                android:id="@+id/rechargeAmoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?actionBarSize"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/packageTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?actionBarSize"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/transactionIDTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?actionBarSize"
                android:textSize="18sp" />


        </LinearLayout>

    </ScrollView>
</LinearLayout>
