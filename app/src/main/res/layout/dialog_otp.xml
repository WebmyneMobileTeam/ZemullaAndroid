<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16dp">

    <com.zemulla.android.app.widgets.TfTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We sent an OTP to your registered mobile number and email. Enter OTP below" />

    <com.zemulla.android.app.widgets.TfEditText
        android:id="@+id/edtOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="@dimen/dimen_16dp"
        android:hint="Enter 6 Digit number"
        android:inputType="number"
        android:textSize="@dimen/XL_TEXT" />

    <com.zemulla.android.app.widgets.TfButton
        android:id="@+id/btnOk"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:text="OK"
        android:layout_height="wrap_content" />
</LinearLayout>