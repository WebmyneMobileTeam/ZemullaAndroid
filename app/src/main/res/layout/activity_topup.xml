<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_topup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFD8DC"
    android:orientation="vertical"
    tools:context="com.zemulla.android.app.topup.TopupActivity">

    <include layout="@layout/app_bar" />

    <com.zemulla.android.app.widgets.TfTextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorExtraDark"
        android:gravity="center"
        android:text="Topup Wallet"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridTopupOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:columnCount="2"
        app:useDefaultMargins="true" />

</LinearLayout>
