<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp">

        <com.zemulla.android.app.widgets.TfTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Enter OTP"
            android:textSize="@dimen/M_TEXT"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="@dimen/dimen_2dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_close_black_24dp" />
    </RelativeLayout>

    <com.zemulla.android.app.widgets.TfTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:text="We have sent an OTP to your registered mobile number and email. Enter OTP below" />

    <com.zemulla.android.app.widgets.TfEditText
        android:id="@+id/edtOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16dp"
        android:gravity="center"
        android:maxLength="6"
        android:hint="Enter 6 Digit number"
        android:inputType="number"
        android:textSize="@dimen/XL_TEXT" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <com.zemulla.android.app.widgets.TfButton
            android:id="@+id/btnOk"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="OK"
            android:textStyle="bold" />

        <com.zemulla.android.app.widgets.TfButton
            android:id="@+id/btnResend"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Resend"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>