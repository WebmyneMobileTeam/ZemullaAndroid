<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.zemulla.android.app.user.HomeActivity">

    <include layout="@layout/app_bar"></include>

    <RelativeLayout

        android:id="@+id/container_balance"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/gridHomeOptions"
        android:background="#e6e6e6"></RelativeLayout>

    <GridLayout
        android:id="@+id/gridHomeOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:columnCount="2"></GridLayout>

</RelativeLayout>
