<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?android:attr/spinnerDropDownItemStyle"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:ellipsize="marquee"
    android:padding="5dp">

    <ImageView
        android:id="@+id/intl_phone_edit__country__item_image"
        android:layout_width="24dp"
        android:layout_height="match_parent"
        android:contentDescription="Country flag"
        android:src="@drawable/country_il" />

    <TextView
        android:padding="5dp"
        android:id="@+id/intl_phone_edit__country__item_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Israel (‫ישראל‬‎)"
        android:textColor="?android:textColorPrimary" />

    <TextView
        android:id="@+id/intl_phone_edit__country__item_dialcode"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="+972"
        android:textColor="?android:textColorHint" />
</LinearLayout>